<Window x:Class="Patterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Patterns"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>        
        <Style TargetType="Label">
            <Setter Property="Margin" Value="15,0" />            
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="15" />
        </Style>
    </Window.Resources>
    <StackPanel Width="160">
        <Label x:Name="label" Content="Entenverhalten" />
        <Button x:Name="button" Content="Button" Click="button_Click"/>
        <Button x:Name="button1" Content="Raketenantrieb" Click="button1_Click"/>
        <Label Content="Hunterverhalten" />
        <Button Click="Button_Click_1">Hunter jagt</Button>
    </StackPanel>
</Window>
